<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <space.ming.FamApp.DrawView
        android:id="@+id/thisDrawView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/Change_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change color rectangles" />

        <Button
            android:id="@+id/Change_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change color ellipses"
            android:layout_weight="1" />
        <Button
            android:id="@+id/Change_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change color squares"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>